<div class="debug">
    Doc:
    {{doc|safe}}

    Doc URL:
    {{doc.url|safe}}

    Doc URL Path:
    {{doc.url.path}}

    Doc Locales:
    {{doc.locales}}

    Env:
    {{env|safe}}

    Fields:
    {% for key, val in doc.fields._data.items() %}
        {{key}}: {{val}}
    {% endfor %}

    Routes ({{doc.pod.router.routes.length}}):
    {#
    <ul>
        {% for route in doc.pod.router.routes.paths %}
            <li><a href="{{route}}">{{route}}</a>
        {% endfor %}
    </ul>
    #}
</div>
